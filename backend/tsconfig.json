{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./dist",
        "module": "commonJs",
        "target": "es2016",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*"
    ]
}